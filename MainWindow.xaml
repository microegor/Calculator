                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn8_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn9"
                Content="9"
                HorizontalAlignment="Left"
                Margin="130,123,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn9_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn0"
                Content="0"
                HorizontalAlignment="Left"
                Margin="0,318,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="125"
                Click="btn0_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btnMinus"
                Content="-"
                HorizontalAlignment="Left"
                Margin="195,58,0,0"

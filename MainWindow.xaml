<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="441"
        Width="292"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Storyboard x:Key="ButtonClickColorAnimation">
            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                            From="LightGray"
                    To="LightBlue"
                    Duration="0:0:0.1"
                    AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>
    <Grid Margin="10,10,10,10">
        <Button x:Name="btn3"
                Content="3"
                HorizontalAlignment="Left"
                Margin="130,253,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn3_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn1"
                Content="1"
                HorizontalAlignment="Left"
                Margin="0,253,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn1_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn2"
                Content="2"
                HorizontalAlignment="Left"
                Margin="65,253,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn2_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn4"
                Content="4"
                HorizontalAlignment="Left"
                Margin="0,188,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn4_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn5"
                Content="5"
                HorizontalAlignment="Left"
                Margin="65,188,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn5_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn6"
                Content="6"
                HorizontalAlignment="Left"
                Margin="130,188,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn6_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn7"
                Content="7"
                HorizontalAlignment="Left"
                Margin="0,123,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Click="btn7_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btn8"
                Content="8"
                HorizontalAlignment="Left"
                Margin="65,123,0,0"

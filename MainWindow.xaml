                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="btnEqual"
                Content="="
                HorizontalAlignment="Left"
                Margin="195,318,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="2.757,-0.749"
                Height="60"
                Width="60"
                Background="#FFEA8825"
                Click="btnEqual_Click"
                Tag="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <TextBlock x:Name="txtNums"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                Text="0"
                VerticalAlignment="Top"
                Width="255"
                RenderTransformOrigin="0.67,1.381"
                Height="53"
                TextAlignment="Right"
                FontFamily="Cascadia Code"
                LineHeight="12"
                FontSize="48"/>

    </Grid>
</Window>
